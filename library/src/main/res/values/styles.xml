<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="GridLayout">

        <!-- 列数 -->
        <attr name="gridImageColumn" format="integer" />
        <!-- 是否可以添加图片 -->
        <attr name="isCanAdd" format="boolean" />
        <!-- 没有图片时显示图片 -->
        <attr name="noImgSrc" format="reference" />

    </declare-styleable>

    <declare-styleable name="RatioImageView">

        <!-- 宽高比 -->
        <attr name="ratio" format="float" />
        <attr name="ratioMode" format="integer">
            <!-- 根据宽度计算比例 -->
            <enum name="dependWidth" value="1"></enum>
            <!-- 根据高度计算比例 -->
            <enum name="dependHeight" value="2"></enum>
        </attr>

    </declare-styleable>

</resources>